package com.snazzyatoms.proshield;

import org.bukkit.plugin.java.JavaPlugin;

import com.snazzyatoms.proshield.plots.PlotManager;  // âœ… updated import
import com.snazzyatoms.proshield.gui.GUIManager;
import com.snazzyatoms.proshield.listeners.GUIListener;
import com.snazzyatoms.proshield.commands.ProShieldCommand;

public class ProShield extends JavaPlugin {
    private static ProShield instance;
    private PlotManager plotManager;
    private GUIManager guiManager;

    @Override
    public void onEnable() {
        instance = this;

        // Managers
        plotManager = new PlotManager();
        guiManager = new GUIManager(this, plotManager);

        // Register commands
        getCommand("proshield").setExecutor(new ProShieldCommand(this, plotManager));

        // Register listeners
        getServer().getPluginManager().registerEvents(new GUIListener(guiManager), this);

        // Config setup
        saveDefaultConfig();
    }

    public static ProShield getInstance() {
        return instance;
    }

    public PlotManager getPlotManager() {
        return plotManager;
    }

    public GUIManager getGuiManager() {
        return guiManager;
    }
}

